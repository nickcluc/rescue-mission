<h1><%= @question.title %></h1>

<p>
  <%= markdown(@question.description) %>
</p>

<%= form_for(@answer) do |f| %>

  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this response from being saved:</h2>
      <ul>
        <% @answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.hidden_field :question_id, :value => @question.id %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_area :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<h2>Answers:</h2>
<ul>
  <% @answers.each do |answer| %>
  <li wrap=hard><%= markdown(answer.description) %></li>
  <% end %>
</ul>

<%= button_to "delete", @question, :method=>:delete, :class=>:destroy %>

<a href="/questions">Back to Questions</a>
